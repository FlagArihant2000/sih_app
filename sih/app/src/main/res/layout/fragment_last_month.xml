<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#ECEFF1"
    android:paddingTop="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="30dp"
            >

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/car"
                    android:tint="@color/black"/>
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Maruti Suzuki Dzire"
                        android:textSize="20sp"
                        android:paddingLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="MH 13 CD 0096"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:paddingLeft="20dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_1"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"


                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="00 Km"
                        android:gravity="center"
                        android:textColor="@color/blue_covid"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Distance"
                        android:textColor="@color/blue_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_2"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="00 Km"
                        android:textColor="@color/blue_covid"
                        android:gravity="center"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Average Distance"
                        android:textColor="@color/blue_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_3"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="20dp"
                        android:text="-"
                        android:gravity="center"
                        android:textColor="@color/red_covid"
                        android:textSize="30sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingBottom="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Places Visited"
                        android:textColor="@color/red_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:textColor="@color/red_covid"
                        android:paddingTop="20dp"
                        android:gravity="center"
                        android:textSize="30sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingBottom="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="New Places"
                        android:textColor="@color/red_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingTop="20dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:textColor="@color/green_covid"
                        android:gravity="center"
                        android:textSize="30sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingBottom="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Most Visited"
                        android:textColor="@color/green_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_5"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Rs 0"
                        android:paddingTop="20dp"
                        android:textColor="@color/green_covid"
                        android:gravity="center"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        android:textColor="@color/green_covid"
                        android:text="Parking Cost"
                        android:textSize="20sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>
</ScrollView>

