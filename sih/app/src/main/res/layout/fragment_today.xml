<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#ECEFF1"
    android:paddingTop="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="30dp"
            >

            <Spinner
                android:id="@+id/spinner"
                android:spinnerMode="dropdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/car"
                    android:tint="@color/black"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_1"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"


                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="20dp"
                        android:text="00 Km"
                        android:gravity="center"
                        android:textColor="@color/blue_covid"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Distance"
                        android:textColor="@color/blue_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_2"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/avg_distance"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="20dp"
                        android:text="00 Km"
                        android:textColor="@color/blue_covid"
                        android:gravity="center"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Average Distance"
                        android:textColor="@color/blue_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_3"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/places_visited"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="20dp"
                        android:text="-"
                        android:gravity="center"
                        android:textColor="@color/red_covid"
                        android:textSize="30sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingBottom="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Places Visited"
                        android:textColor="@color/red_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/new_places"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:textColor="@color/red_covid"
                        android:paddingTop="20dp"
                        android:gravity="center"
                        android:textSize="30sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingBottom="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="New Places"
                        android:textColor="@color/red_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/most_visited"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingTop="20dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:textColor="@color/green_covid"
                        android:gravity="center"
                        android:textSize="30sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingBottom="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Most Visited"
                        android:textColor="@color/green_covid"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_5"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/park_cost"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Rs 0"
                        android:paddingTop="20dp"
                        android:textColor="@color/green_covid"
                        android:gravity="center"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        android:textColor="@color/green_covid"
                        android:text="Parking Cost"
                        android:textSize="20sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            card_view:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/vigilance_mode"
                    android:tint="@color/green_covid"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vigilance Mode"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_vigilance"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/vig_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set time"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/vig_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:focusable="false"
                android:visibility="gone"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/vig_from"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:paddingBottom="16dp"
                    android:paddingLeft="20dp"
                    android:hint="From"
                    android:textSize="13sp"
                    app:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/vig_layout_to"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:focusable="false"
                android:visibility="gone"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/vig_to"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingBottom="16dp"
                    android:paddingLeft="20dp"
                    android:hint="To"
                    android:textSize="13sp"
                    android:gravity="center"
                    app:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>

